<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h3>Edit your listing</h3>
        <br>
        <form action="/listing/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" name="listing[title]" value="<%= listing.title %>" placeholder="Add a catchy title" class="form-control" required>
                <div class="invalid-feedback">Please Enter Valid Title</div>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea name="listing[description]" placeholder="Enter description" class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">Please Give description</div>
                <div class="valid-feedback">Description looks good!</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image :</label>
                <input type="file" name="listing[image]"  class="form-control" >
                
                
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Enter Price:</label>
                    <input type="number" name="listing[price]" value="<%= listing.price %>" placeholder="1200" class="form-control" required>
                    <div class="invalid-feedback">Please Enter Valid Price</div>
                    <div class="valid-feedback">Price looks good!</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Enter Country:</label>
                    <input type="text" name="listing[country]" value="<%= listing.country %>" placeholder="India" class="form-control" required>
                    <div class="invalid-feedback">Please Enter Valid Country</div>
                    <div class="valid-feedback">Country looks good!</div>
                </div>
            </div>
            <div class="mb-5">
                <label for="location" class="form-label">Enter Location:</label>
                <input type="text" name="listing[location]" value="<%= listing.location %>" placeholder="Enter location" class="form-control" required>
                <div class="invalid-feedback">Please Enter Valid Location</div>
                <div class="valid-feedback">Location looks good!</div>
            </div>
            
            <button class="btn btn-dark" style="width: 100px;">Edit</button>
            <br><br>
        </form>
    </div>
</div>
<script src="/JS/script.js"></script>
